@model twmvc25.Models.TestingModel
@{
    var themes = new[] { "", "dark", "light" };
}

@using (Html.BeginForm("Setup", "Home", null, FormMethod.Post, new { @class = "faorm-inline" }))
{
    <div class="form-group">
        @Html.CheckBoxFor(x => x.Preview)
        @Html.LabelFor(x => x.Preview)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Theme)
        @Html.DropDownListFor(x => x.Theme, new SelectList(themes), htmlAttributes: new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />
    <a class="btn btn-default" href="@Url.Action("Index", "ViewTest")" target="_blank">Launch test &raquo;</a>
}